---
import type { SocialTypes } from "../types/social";
import SocialIcon from "./shared/socialIcon.astro";

const { contact } = Astro.props;

const headerSocial = contact.filter(
  (valid: SocialTypes) =>
    valid?.Name === "WhatsApp" ||
    valid?.Name === "Instagram" ||
    valid?.Name === "Facebook"
);
---

<ul class="flex justify-center items-center gap-2">
  {
    headerSocial &&
      headerSocial.map((c: SocialTypes) => (
        <SocialIcon
          name={c.Name}
          link={c.link}
          justIcon={true}
          className="w-8 h-8 p-1 bg-dorado rounded-md"
        />
      ))
  }
</ul>
