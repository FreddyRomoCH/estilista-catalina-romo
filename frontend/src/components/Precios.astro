---
interface PreciosType {
  title: string;
  price: string;
}

const { homePagePrecios } = Astro.props;
const precios = homePagePrecios.section[0].precio;
---

<section id="precios" class="max-w-7xl m-auto mb-12">
  <h2 class="title-section">Precios</h2>

  <div class="flex justify-center items-center bg-secondary p-5">
    <div
      class="flex flex-col justify-center items-center gap-5 w-[90%] md:w-3/5 m-auto bg-principal-darker px-10 py-5 rounded"
    >
      {
        precios &&
          precios.map(({ title, price }: PreciosType) => (
            <div class="flex flex-row justify-center items-start gap-5 w-full">
              <p class="font-cinzel flex-1 text-start text-dorado">{title}:</p>
              <p class="font-playfair flex-1 font-semibold text-end text-gris">
                {`$${price}`}
              </p>
            </div>
          ))
      }
    </div>
  </div>
</section>
